*{
	margin:0;
    padding:0;
	text-decoration:none;
	font-family: "微软雅黑";
	overflow:hidden;
}

html{
	height:100%;
	font-size:100px;
}

body {
	height:100%;
	background-image: url("../images/bg.jpg");
  	background-repeat: no-repeat;
  	background-size: 100% 100%;
}

.hide {
	display: none !important;
}
.bg {
  	position: absolute;
  	width : 100%;
  	height : 100%;
  	z-index : 1;
}
.loading {
  	position: absolute;
  	width : 100%;
  	height : 100%;
  	z-index : 2;
}

@media all and (max-width:359px) {
    html{ font-size:58px; }
}
